{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "playwright"
    ]
  },
  "include": [
    "tests",
    "pages",
    "api",
    "schemas",
    "test-data"
  ]
}